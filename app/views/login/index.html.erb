
<% if user_signed_in? %>
  <%= link_to 'log out', destroy_user_session_url, method: :delete %>
  <h1>MAIN PAGE SHOWING ALL THEMES</h1>
  <p>Current User Id </p>
  <%= current_user.id %>
  <%= current_user.email %>
  <h2>Choose your theme: </h2>
  <p>Get design inspiration from:<a href="https://www.canva.com">Canva</a></p>

  <%= form_with scope: :moment, url: moments_path, local: true do |form| %>

    <p>
      <%= form.submit "Create Birthday" %>
    </p>
  <% end %>

  <h3>Graduation</h3>
  <h3>Farewell</h3>

  <h2><%= link_to 'All Moments', moments_path %></h2>

<% else %>
  <h1>This is the landing page before login</h1>
  <%= link_to 'Log in', new_user_session_url %>
  <%= link_to('Register', new_user_registration_path) %>
<% end %>


