<p id="notice"><%= notice %></p>

<% if @moment === nil %>
	<p>No such thing bruh </p>
	<% controller.redirect_to '/' %>

<% elsif @moment.occasion === 'birthday' %>
	<p>
	<strong>ID:</strong>
	<%= @moment.id %>
	</p>

	<p>
	<strong>Title:</strong>
	<%= @moment.title %>
	</p>

	<p>
	<strong>To name:</strong>
	<%= @moment.to_name %>
	</p>

	<p>
	<strong>From name:</strong>
	<%= @moment.from_name %>
	</p>

	<p>
	<strong>Description:</strong>
	<%= @moment.description %>
	</p>

	<p>
	<strong>Image url:</strong>
	<%= @moment.image_url %>
	</p>

	<p>
	<strong>Audio url:</strong>
	<%= @moment.audio_url %>
	</p> 

	<br/>
	<%= link_to 'Edit', edit_moment_path(@moment) %> |
	<%= link_to 'Back', moments_path %>

	<div class="card">
		<div class="imgBox">
			<div class="bark"></div>
			<img src="https://image.ibb.co/fYzTrb/lastofus.jpg">
		</div>
		<div class="details">
			<h4 class="color1"><%= @moment.title %></h2>
			<h4 class="color2 margin">HAPPY BIRTHDAY!</h3>
			<p>Dear <%= @moment.to_name %>,</p>
			<p>Wishing you many happy returns!</p>
			<p class="text-right">Happy Birthday, <%= @moment.to_name %>!</p>
			<p class="text-right">â™¥<%= @moment.from_name %></p>
		</div>
	</div>

<% elsif @moment.occasion === 'graduation' %>
	<p> Graddddd</p>
<% elsif @moment.occasion === 'farewell' %>
	<p> GOODBYE </p>
<% end %>

